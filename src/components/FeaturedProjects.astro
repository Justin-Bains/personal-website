---
import OpenFlowMiniNetProject from './OpenFlowMiniNetProject.astro';
import GameSimProject from './GameSimProject.astro';
import HybridServerClusterProject from './HybridServerClusterProject.astro';
import SecurityPrivacyExploitsProject from './SecurityPrivacyExploitsProject.astro';
---
<section id="featured-projects">
  <h2>Featured Projects</h2>
  <div class="projects-grid">
    <OpenFlowMiniNetProject />
    <SecurityPrivacyExploitsProject />
    <GameSimProject />
    <HybridServerClusterProject />
    <!-- Add more project components here as needed -->
  </div>
</section>
<style>
.projects-grid {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 2rem;
}
.project-card {
  background: var(--bg-tertiary);
  border: 2px solid var(--border-base);
  border-radius: 4px;
  padding: 1.5rem 2rem;
  min-width: 260px;
  max-width: 340px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: var(--transition-base);
}

.project-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
  opacity: 0.4;
}

.project-card:hover {
  border-color: var(--color-primary);
  box-shadow: 0 12px 24px rgba(14, 165, 233, 0.2);
  transform: translateY(-4px);
}

.project-card h3 {
  color: var(--text-primary);
  margin-bottom: var(--space-4);
  font-weight: var(--font-bold);
}

.project-card p {
  color: var(--text-muted);
  text-align: center;
  font-size: var(--text-base);
  line-height: var(--leading-loose);
  margin-bottom: var(--space-4);
}

.project-image {
  width: 100%;
  max-width: 220px;
  border-radius: 4px;
  border: 1px solid var(--border-base);
  margin-bottom: var(--space-4);
  background: var(--bg-secondary);
}
</style>
