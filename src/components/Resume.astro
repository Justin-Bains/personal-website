<section id="resume">
  <h2>Résumé</h2>
  <div class="card resume-content">
    <div class="resume-actions">
      <a href="/CV_full.pdf" class="btn" download>
        Download PDF →
      </a>
    </div>
    <div class="resume-display">
      <iframe src="/CV_full.pdf" width="100%" height="900px"></iframe>
      <div class="no-pdf-fallback">
        <noscript>
          This browser does not support PDFs. Please download the PDF to view it: <a href="/CV_full.pdf">Download PDF</a>
        </noscript>
      </div>
    </div>
  </div>
</section>

<style>
  .resume-actions {
    margin-bottom: var(--space-6);
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .resume-display iframe {
    border: none;
  }

  .no-pdf-fallback {
    margin-top: var(--space-4);
    text-align: center;
    color: var(--text-muted);
  }
</style>
