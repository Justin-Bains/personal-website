---
import data from '../data/portfolio-data.json';
const project = data.repository;
---
<div class="project-card">
  <h4 class="font-accent">{project.name}</h4>
  <p>{project.description}</p>
  <div class="tags">
    {project.topics.slice(0, 5).map(topic => <span class="tag">{topic}</span>)}
  </div>
  <a href={project.url} target="_blank" rel="noopener noreferrer" class="btn">
    View on GitHub
  </a>
</div>

<style>
.project-card {
  display: flex;
  flex-direction: column;
  padding: calc(var(--space-unit) * 1.5);
  transition: all var(--transition-fast);
  border-bottom: 1px solid var(--color-border);
  flex-basis: 50%;
}

.project-card:hover {
  transform: translateY(-4px);
  border-color: var(--color-accent-primary);
}

.project-card h4 {
  margin-bottom: var(--space-unit);
  color: var(--color-accent-primary);
}

.project-card p {
  flex-grow: 1;
  color: var(--color-text-secondary);
}

.tags {
  margin: var(--space-unit) 0;
  display: flex;
  flex-wrap: wrap;
  gap: calc(var(--space-unit) / 2);
}

.tag {
  background-color: #2c2c2c;
  color: #a3a3a3;
  padding: calc(var(--space-unit) / 4) calc(var(--space-unit) / 2);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-family: var(--font-primary);
}

.btn {
  margin-top: auto;
  text-align: center;
}
</style>