<section id="certifications">
  <h2>Certifications</h2>
  <div class="grid">
    {certifications.map((cert) => (
      <div class="card cert-card">
        <img src={cert.logo} alt={cert.name} class="cert-logo" />
        <h3>{cert.name}</h3>
        <p><strong>{cert.issuer}</strong></p>
        <p>Issued: {cert.date}</p>
        <a href={cert.url} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
          View Certificate â†’
        </a>
      </div>
    ))}
  </div>
</section>

<style>
  .cert-card {
    text-align: center;
  }
  
  .cert-card a {
    margin-top: 1rem;
    display: inline-block;
  }
</style>
