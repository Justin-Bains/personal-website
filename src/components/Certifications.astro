---
const certifications = [
  {
    name: "Cisco Certified Network Associate (CCNA)",
    issuer: "Cisco",
    url: "https://www.credly.com/badges/c5680f7f-c33e-4a3c-9d89-4071a9e02ac0/public_url",
    date: "2025",
    logo: "/ccna_large.jpg"
  },
  {
    name: "CompTIA Security+",
    issuer: "CompTIA",
    url: "https://www.credly.com/badges/9cd8c888-cadf-4862-8e23-e60bcb0c50a3/public_url",
    date: "2025",
    logo: "/Security+-svg.svg"
  },

  {
    name: "Google Associate Cloud Engineer",
    issuer: "Google Cloud",
    url: "https://www.credly.com/badges/049b3acd-ecfb-48d0-94a8-31be67829567/public_url",
    date: "2024",
    logo: "/associate-cloud-engineer-certification.png"
  },
  {
    name: "CompTIA Network+",
    issuer: "CompTIA",
    url: "https://www.credly.com/badges/3cbe077d-d11b-4f2c-b582-86599214301e/public_url",
    date: "2025",
    logo: "/Network+-svg.svg"
  },
  {
    name: "CompTIA A+",
    issuer: "CompTIA",
    url: "https://www.credly.com/badges/42df380d-8763-4559-b2a2-b29f61ee34c6/public_url",
    date: "2025",
    logo: "/A+-svg.svg"
  },
];
---

<section>
  <h2>Certifications</h2>
  <div class="cert-grid">
    {certifications.map((cert) => (
      <a href={cert.url} target="_blank" rel="noopener noreferrer" class="cert-card">
        <img src={cert.logo} alt=`${cert.name} badge` loading="lazy" />
        <div class="cert-info">
          <span class="cert-name">{cert.name}</span>
          <span class="cert-issuer">by {cert.issuer}</span>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
section {
    padding: 4rem 2rem;
}

h2 {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 2rem;
    text-align: center; /* Center the heading */
}

.cert-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center; /* Center items horizontally */
  align-items: stretch; /* Ensures all cards in a row have the same height */
  gap: 2rem; /* Provides consistent spacing between cards */
}

.cert-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  text-decoration: none;
  flex: 1 1 280px; /* Allows cards to grow and shrink, with a preferred width of 280px */
  max-width: 300px; /* Prevents cards from becoming too wide */
  border: 1px solid var(--cert-border-color, #e0e0e0); /* Small border, customizable via CSS variable */
  border-radius: 8px; /* Slightly rounded corners for a modern look */
  padding: 1.5rem; /* Increased padding inside each card */
  background-color: var(--cert-card-background, #ffffff); /* Card background, customizable via CSS variable */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.08); /* Subtle shadow for depth */
  transition: all 0.3s ease; /* Smooth transition for hover effects */
}

.cert-card img {
  width: 100px;
  height: 100px;
  object-fit: contain;
  margin-bottom: 1.5rem; /* Increased space between image and text */
}

.cert-info {
  display: flex;
  flex-direction: column;
  width: 100%; /* Ensures info section takes full width of the card */
}

.cert-name {
  font-weight: 500;
  line-height: 1.4;
  color: var(--cert-name-color, #333); /* Customizable text color for certification name */
}

.cert-issuer {
  font-size: 0.9rem;
  color: var(--cert-issuer-color, #666); /* Customizable text color for issuer */
}

.cert-card:hover {
  transform: translateY(-5px); /* Lifts the card slightly on hover */
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Enhances shadow on hover */
}
</style>