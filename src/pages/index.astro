---
import BaseLayout from '../layouts/BaseLayout.astro';

import NetworkBackground from '../components/NetworkBackground.astro';
import About from '../components/About.astro';
import FeaturedProjects from '../components/FeaturedProjects.astro';
import Skills from '../components/Skills.astro';
import Certifications from '../components/Certifications.astro';
import Resume from '../components/Resume.astro';
import Blog from '../components/Blog.astro';
import Contact from '../components/Contact.astro';
import GitHubRepos from '../components/GitHubRepos.astro';
import NetworkTopology from '../components/NetworkTopology.astro';

const title = "Jashandeep Justin Bains - Network Engineer & Cloud Professional";
const description = "Professional portfolio showcasing my networking, cloud, and software development certifications, projects, and experience. CCNA, AWS Certified, and more.";

// Structured Data for SEO (JSON-LD)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Jashandeep Justin Bains",
  "jobTitle": "Network Engineer",
  "description": description,
  "url": "https://jjbly.uk",
  "sameAs": [
    "https://github.com/JashandeepJustinBains",
    "https://www.linkedin.com/in/jashandeep-bains-b2aab6192}"
  ],
  "knowsAbout": [
    "Networking",
    "Cloud Computing",
    "AWS",
    "Cisco",
    "Network Security",
    "Software Development"
  ]
};
---

<BaseLayout title={title} description={description}>
  <!-- SEO Structured Data -->
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jjbly.uk" />
    <meta property="og:image" content="/public/og-image.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/public/og-image.png" />
  </head>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <!-- Hero Section -->
  <div class="hero compact-hero">
    <h1>Welcome to My Portfolio</h1>
    <p>Network Engineer | Cloud Professional | Developer</p>
    <div class="hero-links">
      <a href="#homelab" class="btn">Explore My Homelab</a>
      <a href="#certifications" class="btn btn-secondary">View Certifications</a>
      <a href="#resume" class="btn btn-secondary">Download Résumé</a>
    </div>
  </div>


  <About />
  <Certifications />
  <FeaturedProjects />
  <Skills />
  <!-- Certifications Section -->

  <!-- Network Topology -->
  <NetworkTopology />



  <!-- GitHub Projects -->
  <GitHubRepos />




  <Resume />
  <Blog />



<!-- All global styles and print styles below -->
<style>
    .hero {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 1.5rem 0 0.5rem 0;
      margin-bottom: 1.5rem;
      background: none;
    }
    .compact-hero h1 {
      font-size: 2.2rem;
      margin-bottom: 0.3rem;
      color: var(--text-primary);
      font-weight: 700;
      letter-spacing: -1px;
    }
    .compact-hero p {
      font-size: 1.1rem;
      margin-bottom: 0.7rem;
      color: var(--text-muted);
    }
    .hero-links {
      display: flex;
      gap: 0.7rem;
      justify-content: center;
      flex-wrap: wrap;
    }
  @media print {
    body, html {
      background: #fff !important;
      color: #000 !important;
    }
    header, nav, .hero, .btn, .projects-grid, .topology-container, .card:not(.resume-content), .resume-actions, .vpc-topology-grid, .topology-legend, .node-info-panel, .btn-small, .badge, .legend-items, .legend-item, .vpc-label, .vpc-node-link, .vpc-node-desc, .vpc-group:not(.resume-content) {
      display: none !important;
    }
    .resume-content, .resume-display, #resume {
      display: block !important;
      background: #fff !important;
      color: #000 !important;
      box-shadow: none !important;
      border: none !important;
      padding: 0 !important;
      margin: 0 !important;
      width: 100% !important;
      min-width: 0 !important;
    }
    iframe {
      width: 100vw !important;
      height: 100vh !important;
      border: none !important;
    }
  }
  .resume-content {
    max-width: 100%;
  }
  .resume-display {
    padding: 2rem 0;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-base);
    border-radius: var(--radius-md);
    margin-top: 1rem;
    max-width: 100%;
    overflow-x: auto;
    min-height: 900px;
  }
</style>


<style>
  .resume-display :global(hr) {
    border: none;
    border-top: 1px solid var(--border-base);
    margin: 2rem 0;
  }
</style>

<Contact />
</BaseLayout>
